<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pharmaciedemo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_hospital"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_hospital"
        android:supportsRtl="true"
        android:theme="@style/CustomTheme">
        <activity android:name=".DrugItemActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".AddDrugActivity" />
        <activity android:name=".ItemActivity" />
        <activity android:name=".AddCategoryActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>